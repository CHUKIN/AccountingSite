@{
    Layout = null;
}

@model AccountingSite.Models.Employee

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Аккаунты пользователей. Удаление</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Аккаунты пользователей", "Index", "Employees")</li>
            </ul>
            <form class="navbar-form navbar-right" role="form" method="get" action="/Account/LogOff">
                <button type="submit" class="btn btn-success">Выйти</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Удаление аккаунта пользователя</h2><br>
            <h3>Вы уверены, что хотите удалить?</h3>
            <div>
                <hr>
                <dl class="dl-horizontal">
                    <dt>Роль</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Role.Name)
                    </dd>

                    <dt>Логин</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Login)
                    </dd>

                    <dt>Пароль</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Password)
                    </dd>

                    <dt>Имя</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>Возраст</dt>
                    <dd>
                        @Html.DisplayFor(model => model.Age)
                    </dd>

                </dl>

                <div>
                    <button type="submit" class="btn btn-default">Удалить</button>
                </div>

            </div>

        </div>
    </div>

</div>

<div class="container body-content">
    <hr/>
    <footer>
        <p class="text-center">
            <a href="#">Наверх</a>
        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>





