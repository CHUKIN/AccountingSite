@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Запрос на склад</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Запрос на склад", "StoreRequest", "Chief")</li>
                <li>@Html.ActionLink("Выдача инвентаря", "ItemExtradition", "Chief")</li>
                <li>@Html.ActionLink("Статус заказов", "OrderStatus", "Chief")</li>
            </ul>
            <form class="navbar-form navbar-right" role="form">
                <button type="submit" class="btn btn-success">Выйти</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form role="form">
                    <h2>Заполнение запроса на склад</h2><br>
                    <div class="form-group">
                        <label class="col-md-2 control-label">От кого: </label>
                        <div class="col-md-6">
                            <p class="form-control-static">Начальник цеха 1</p>
                        </div>
                        <br><br>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Кому: </label>
                        <div class="dropdown col-md-6">
                            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Кому
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li>
                                    <p>HTML</p>
                                </li>
                                <li>
                                    <p>CSS</p>
                                </li>
                                <li>
                                    <p>JavaScript</p>
                                </li>
                            </ul>
                        </div>
                        <br><br>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label"for="text">Текст: </label>
                        <div class="col-md-6">
                            <textarea class="form-control" rows="3" id="text"></textarea>
                        </div>
                        <br>
                    </div>
                    <br><br><br>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Инструмент:</label>
                        <div class="dropdown col-md-2">
                            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Инструмент
                                <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li>
                                    <p>HTML</p>
                                </li>
                                <li>
                                    <p>CSS</p>
                                </li>
                                <li>
                                    <p>JavaScript</p>
                                </li>
                            </ul>
                        </div>
                        <label class="col-md-2 control-label" for="amount">Количество:</label>
                        <input type="text" class="form-control col-md-2" id="amount" required="" autofocus="" name="amount">
                        <br><br>
                        <div class="col-md-1">
                            <button class="btn btn-success" type="submit">+</button>
                        </div>
                        <br><br>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Дата:</label>
                        <p class="form-control-static col-md-6">@DateTime.Now</p>
                        <br><br>
                    </div>

                    <button class="btn btn-primary" type="submit">Отправить</button>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</div>

<div class="container body-content">
    <hr />
    <footer>
        <p class="text-center">
            <a href="#">Наверх</a>
        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>
